<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hanjinliang.androidstudy.customerviews.LoadingView.CircleLoadingViewActivity">

    <com.hanjinliang.androidstudy.customerviews.LoadingView.CircleLoadingView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/CircleLoadingView"
         />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CircleLoadingView"
        android:id="@+id/Start"
        android:text="Start"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Start"
        android:id="@+id/End"
        android:text="End"/>
</android.support.constraint.ConstraintLayout>
