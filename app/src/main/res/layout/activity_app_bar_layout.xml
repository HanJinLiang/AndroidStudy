<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/AppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            >
            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="exitUntilCollapsed|scroll|snap">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                         >
                        <TextView
                            android:id="@+id/leftLabel"
                            android:layout_width="30dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="$"
                            android:textColor="#ffffff"
                            android:textSize="15.0sp"
                            android:textStyle="bold"
                             />
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#991282"
                    android:textSize="24sp"
                    android:text="tv_1"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#391282"
                    android:textSize="24sp"
                    android:text="tv_2"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#491282"
                    android:textSize="24sp"
                    android:text="tv_3"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#991202"
                    android:textSize="24sp"
                    android:text="tv_4"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#9912f2"
                    android:textSize="24sp"
                    android:text="tv_5"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#1f1f62"
                    android:textSize="24sp"
                    android:text="tv_6"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#99f262"
                    android:textSize="24sp"
                    android:text="tv_7"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#994262"
                    android:textSize="24sp"
                    android:text="tv_8"
                    android:gravity="center"/>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/layout_title"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="财富"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="昨日奖金收入"
            android:textColor="#ffffff"
            android:id="@+id/tv_yesterday_hint"/>

        <TextView
            android:id="@+id/tv_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="100.00元"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#20000000"
            android:orientation="horizontal"
            android:id="@+id/layout_total">

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="45 $"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#afafaf"
                android:layout_margin="5dp"/>

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="45 $"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>