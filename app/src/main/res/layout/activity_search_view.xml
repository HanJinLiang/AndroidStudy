<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hanjinliang.androidstudy.customerviews.SearchView.SearchViewActivity">

    <com.hanjinliang.androidstudy.customerviews.SearchView.SearchView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        android:id="@+id/SearchView"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/button"
        android:text="搜索结束"
        android:layout_toRightOf="@+id/SearchView"
        android:layout_alignTop="@+id/SearchView"/>

</RelativeLayout>
