<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/girl_bg"
    tools:context="com.hanjinliang.androidstudy.customerviews.CustomerProgressBar.CustomerProgressBarActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <com.hanjinliang.androidstudy.customerviews.CustomerProgressBar.CircleBar
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/CircleBar"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="开始"
                    android:id="@+id/CircleBarBtn"/>
            </LinearLayout>
    <com.hanjinliang.androidstudy.customerviews.CustomerProgressBar.ProgressRing
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp" />

    <com.hanjinliang.androidstudy.customerviews.CustomerProgressBar.CustomerProgressBar
        android:layout_width="10dp"
        android:layout_height="100dp"
        app:ProgressWidth="20dp"
        app:FirstColor="@color/colorAccent"
        app:SecondColor="@color/colorPrimary"
        app:Speed="10"
        android:background="#ffffff"/>

    <com.hanjinliang.androidstudy.customerviews.CustomerProgressBar.CustomerProgressCircleView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"/>

    <com.hanjinliang.androidstudy.customerviews.CustomerProgressBar.CustomerLoadingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:id="@+id/CustomerLoadingView"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
