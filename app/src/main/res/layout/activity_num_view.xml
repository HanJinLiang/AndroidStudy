<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <com.hanjinliang.androidstudy.customerviews.NumView.NumView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:id="@+id/numView"
        android:layout_margin="20dp"
        app:NumTextSize="10sp"
        app:NumInnerPadding="2dp"
        app:InnerCircleColor="#ff0000"
        app:OutCircleColor="#000000"
        app:NumTextColor="#ffffff"
        app:OutCircleWidth="1dp"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="999"
        android:layout_margin="20dp"/>
</LinearLayout>